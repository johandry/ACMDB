<%= simple_form_for @machine, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :server_name, placeholder: '.whopper.com' %>
  <%= f.association :machine_status_id %>
  <%= f.input :ip %>
  <%= f.association :os_id, label: 'OS' %>
  <%= f.association :environment_id %>
  <%= f.association :hosting_id %>
  <%= f.input :backup_server, placeholder: 'b' %>
  <%= f.input :description %>
  <%= f.input :comments %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                machines_path, :class => 'btn' %>
  </div>
<% end %>
